@model Turnos.Models.Especialidad

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>

<body>
    <h4>Especialidad</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit" class="col s12">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="IdEspecialidad" />
                <div class="row">
                    <div class="input-field col s6">
                        <label asp-for="Descripcion"></label>
                        <input asp-for="Descripcion" />
                        <span asp-validation-for="Descripcion"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col s6 m6">
                        <button class="btn waves-effect waves-light orange accent-4" type="submit" name="action">Grabar
                            <i class="material-icons right">send</i>
                        </button>
                        <a class="waves-effect waves-light btn grey darken-4" asp-action="Index">
                            <i class="material-icons left">undo</i>Volver
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

</body>

</html>