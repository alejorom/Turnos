@model Turnos.Models.Medico

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>

<body>

    <h4>¿Está seguro de eliminar el siguiente médico?</h4>
    <div>
        <h5>Médico</h5>
        <hr />

        <div class="row">
            <div class="col s12 m6">
                <div class="card hoverable blue-grey darken-1">
                    <div class="card-content white-text">
                        <span class="card-title">
                            <h5><b>@Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)</b></h5>
                        </span>
                        <hr/>
                        <dt>
                            <h6><b>@Html.DisplayNameFor(model => model.Direccion):</b> @Html.DisplayFor(model => model.Direccion)</h6>
                        </dt>
                        <dt>
                            <h6><b>@Html.DisplayNameFor(model => model.Telefono):</b> @Html.DisplayFor(model => model.Telefono)</h6>
                        </dt>
                        <dt>
                            <h6><b>@Html.DisplayNameFor(model => model.Email):</b> @Html.DisplayFor(model => model.Email)</h6>
                        </dt>
                        <dt>
                            <h6><b>@Html.DisplayNameFor(model => model.HorarioAtencionDesde):</b> @Html.DisplayFor(model => model.HorarioAtencionDesde)</h6>
                        </dt>
                        <dt>
                            <h6><b>@Html.DisplayNameFor(model => model.HorarioAtencionHasta):</b> @Html.DisplayFor(model => model.HorarioAtencionHasta)</h6>
                        </dt>
                    </div>
                    <div class="card-action blue-grey darken-2">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="IdMedico" />
                            <input type="submit" value="Eliminar" class="waves-effect waves-light btn-small" />
                            <a asp-action="Index" class="waves-effect waves-light btn-small blue-grey darken-1 right">Volver</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
