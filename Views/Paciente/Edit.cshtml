@model Turnos.Models.Paciente

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>

<body>
    <h4>Paciente</h4>
    <hr />
    <div class="row">
        <div>
            <form asp-action="Edit" class="col s12">
                <div asp-validation-summary="ModelOnly"></div>
                <input type="hidden" asp-for="IdPaciente" />
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">person_pin</i>
                        <label for="Nombre">Nombre</label>
                        <input asp-for="Nombre" type="text" class="validate">
                        <span asp-validation-for="Nombre"></span>
                    </div>
                    <div class="input-field col s6">
                        <label for="Apellido">Apellido</label>
                        <input asp-for="Apellido" type="text" class="validate">
                        <span asp-validation-for="Apellido"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">business</i>
                        <label for="Direccion">Dirección</label>
                        <input asp-for="Direccion" type="text" class="validate">
                        <span asp-validation-for="Direccion"></span>
                    </div>
                    <div class="input-field col s6">
                        <i class="material-icons prefix">phone</i>
                        <label for="Telefono">Teléfono</label>
                        <input asp-for="Telefono" type="tel" class="validate">
                        <span asp-validation-for="Telefono"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">email</i>
                        <label for="Email">Correo electrónico</label>
                        <input asp-for="Email" type="text" class="validate">
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="col s6 m6">
                        <button class="btn waves-effect waves-light green accent-3" type="submit" name="action">Grabar
                            <i class="material-icons right">send</i>
                        </button>
                        <a class="waves-effect waves-light btn grey darken-4" asp-action="Index">
                            <i class="material-icons left">undo</i>Volver
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

</html>